<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.LoginView"
             x:DataType="vm:LoginViewModel"
             Title="LoginView">
    
    <Grid Padding="20" RowDefinitions="Auto, *">
        <HorizontalStackLayout Grid.Row="0" Spacing="10">
            <Button Text="Login" Command="{Binding ShowLoginCommand}" />
            <Button Text="Register" Command="{Binding ShowRegisterCommand}" />
        </HorizontalStackLayout>
        
        <StackLayout Grid.Row="1" IsVisible="{Binding IsLoginVisible}">
            <Entry Placeholder="Email" Text="{Binding Email}" />
            <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" />
            <Button Text="Login" Command="{Binding LoginCommand}" />
        </StackLayout>
        
        <StackLayout Grid.Row="1" IsVisible="{Binding IsRegisterVisibile}">
            
            <Entry Placeholder="Name" Text="{Binding Name}" />
            <Entry Placeholder="Email" Text="{Binding Email}" />
            <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" />
            <Button Text="Register" Command="{Binding RegisterCommand}" />
        </StackLayout>
    </Grid>
</ContentPage>